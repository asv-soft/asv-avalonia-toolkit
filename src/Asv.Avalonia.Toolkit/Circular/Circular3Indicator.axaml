            </Animation>
        </Style.Animations>
    </Style>
    <Style Selector="controls|Circular3Indicator:top-unknown /template/ TextBlock#TopTextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextUnknownBrush}"/>
    </Style>
    
    
    
