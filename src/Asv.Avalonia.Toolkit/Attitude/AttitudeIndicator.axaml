<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Asv.Avalonia.Toolkit">
    <Design.PreviewWith>
        <controls:AttitudeIndicator Width="300" Height="400" />
    </Design.PreviewWith>

    <Style Selector="controls|AttitudeIndicator">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <Border BorderBrush="{StaticResource IndicatorBorderBrush}"
                        CornerRadius="{StaticResource IndicatorCornerRadius}">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="50%,0%"
                                             EndPoint="50%,100%" Opacity="0.5">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0" Color="#4679ba"/>
                                <GradientStop Offset="0.5" Color="#a2acc5"/>
                                <GradientStop Offset="0.5" Color="#081b5d"/>
                                <GradientStop Offset="1" Color="#2e4469"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>  
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
