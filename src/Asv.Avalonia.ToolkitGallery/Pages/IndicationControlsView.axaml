<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:battery="clr-namespace:Asv.Avalonia.Toolkit.Battery;assembly=Asv.Avalonia.Toolkit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Asv.Avalonia.ToolkitGallery.Pages.IndicationControlsView">
    <ScrollViewer>
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
            <TextBlock></TextBlock>
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Battery Indicator"></TextBlock>
                <battery:BatteryIndicator Width="100" Height="100" />
            </StackPanel>
        </Grid>    
    </ScrollViewer>
    
</UserControl>
